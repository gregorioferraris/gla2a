@prefix doap: <http://usefulinc.com/ns/doap#> .
@prefix lv2:  <http://lv2plug.in/ns/lv2core#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ui:   <http://lv2plug.in/ns/extensions/ui#> .
@prefix pset: <http://lv2plug.in/ns/ext/presets#> .
@prefix atom: <http://lv2plug.in/ns/ext/atom#> .
@prefix units: <http://lv2plug.in/ns/extensions/units#> .
@prefix urid: <http://lv2plug.in/ns/ext/urid#> .
@prefix epp: <http://lv2plug.in/ns/ext/port-props#> .
@prefix midi: <http://lv2plug.in/ns/extensions/midi#> .

# URI unico del tuo plugin. Deve corrispondere esattamente a GLA2A_URI in gla2a.cpp
<http://gregorioferraris.github.io/lv2/gla2a>
    a lv2:Plugin ;
    lv2:requiredFeature urid:map ;
    lv2:optionalFeature lv2:hardRTCapable ;
    lv2:minorVersion 0 ;
    lv2:microVersion 0 ;
    doap:name "Gla2a Compressor" ;
    doap:developer [
        foaf:name "Gregorio Ferraris" ;
        foaf:homepage <http://gregorioferraris.github.io> ; # Sostituisci con la tua homepage, se ne hai una
        foaf:mbox <mailto:la_tua_email@esempio.com> # Sostituisci con la tua email
    ] ;
    doap:license <http://opensource.org/licenses/ISC> ; # Licenza ISC come esempio
    doap:description """A digital replica of the legendary LA-2A opto compressor.""" ;

    # --- Porte del Plugin ---

    # Porta di Controllo: Input Gain (Peak Reduction)
    lv2:port [
        a lv2:InputPort ,
          lv2:ControlPort ;
        lv2:index 0 ;
        lv2:symbol "gain_in" ;
        lv2:name "Input Gain" ;
        lv2:default 0.0 ;       # Valore predefinito (0 dB)
        lv2:minimum -20.0 ;     # Minimo -20 dB
        lv2:maximum 20.0 ;      # Massimo +20 dB
        units:unit units:db ;
        rdfs:comment "Controls the input level and thus the amount of compression."
    ] ,
    # Porta di Controllo: Output Gain (Make-up Gain)
    [
        a lv2:InputPort ,
          lv2:ControlPort ;
        lv2:index 1 ;
        lv2:symbol "gain_out" ;
        lv2:name "Output Gain" ;
        lv2:default 0.0 ;
        lv2:minimum -20.0 ;
        lv2:maximum 20.0 ;
        units:unit units:db ;
        rdfs:comment "Adjusts the output level of the compressed signal."
    ] ,
    # Porta di Controllo: Peak Reduction (simula la manopola "Peak Reduction" dell'LA-2A)
    [
        a lv2:InputPort ,
          lv2:ControlPort ;
        lv2:index 2 ;
        lv2:symbol "peak_reduction" ;
        lv2:name "Peak Reduction" ;
        lv2:default 0.0 ;       # 0 = nessuna compressione
        lv2:minimum 0.0 ;       # Minima riduzione (off)
        lv2:maximum 100.0 ;     # Massima riduzione
        units:unit units:ratio ; # Usiamo ratio come unità generica, poi potremmo raffinare
        rdfs:comment "Determines the amount of gain reduction applied."
    ] ,
    # Porta di Controllo: Mode (Compressor/Limiter)
    [
        a lv2:InputPort ,
          lv2:ControlPort ;
        lv2:index 3 ;
        lv2:symbol "mode" ;
        lv2:name "Mode" ;
        lv2:default 0.0 ;       # 0 = Compressore, 1 = Limiter
        lv2:minimum 0.0 ;
        lv2:maximum 1.0 ;
        lv2:portProperty lv2:integer ; # Indicheremo che è un intero
        lv2:scalePoint [ rdfs:label "Compress" ; lv2:value 0.0 ] ;
        lv2:scalePoint [ rdfs:label "Limit" ; lv2:value 1.0 ] ;
        rdfs:comment "Switches between Compressor and Limiter modes."
    ] ,
    # Porta di Controllo: Sidechain Mode (Internal/External)
    [
        a lv2:InputPort ,
          lv2:ControlPort ;
        lv2:index 4 ;
        lv2:symbol "sidechain_mode" ;
        lv2:name "Sidechain Mode" ;
        lv2:default 0.0 ;       # 0 = Internal, 1 = External
        lv2:minimum 0.0 ;
        lv2:maximum 1.0 ;
        lv2:portProperty lv2:integer ;
        lv2:scalePoint [ rdfs:label "Internal" ; lv2:value 0.0 ] ;
        lv2:scalePoint [ rdfs:label "External" ; lv2:value 1.0 ] ;
        rdfs:comment "Selects the source for sidechain detection."
    ] ,
    # Porta Audio: Input Sidechain Esterno (Mono)
    [
        a lv2:InputPort ,
          lv2:AudioPort ;
        lv2:index 5 ;
        lv2:symbol "ext_sidechain_in" ;
        lv2:name "External Sidechain In" ;
        lv2:portProperty epp:optional ; # Questa porta è opzionale
        rdfs:comment "External audio input for sidechain detection."
    ] ,
    # Porte Audio: Input e Output Stereo (per iniziare, poi gestiremo il multicanale)
    [
        a lv2:InputPort ,
          lv2:AudioPort ;
        lv2:index 6 ;
        lv2:symbol "in_l" ;
        lv2:name "Input L"
    ] ,
    [
        a lv2:InputPort ,
          lv2:AudioPort ;
        lv2:index 7 ;
        lv2:symbol "in_r" ;
        lv2:name "Input R"
    ] ,
    [
        a lv2:OutputPort ,
          lv2:AudioPort ;
        lv2:index 8 ;
        lv2:symbol "out_l" ;
        lv2:name "Output L"
    ] ,
    [
        a lv2:OutputPort ,
          lv2:AudioPort ;
        lv2:index 9 ;
        lv2:symbol "out_r" ;
        lv2:name "Output R"
    ] .